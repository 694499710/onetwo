<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  	<groupId>org.onetwo4j</groupId>
	<artifactId>onetwo-parent</artifactId>
	<version>4.3.5-SNAPSHOT</version>
	<packaging>pom</packaging>

	<name>onetwo-parent</name>
	<description>onetwo-parent</description>
    <url>https://github.com/wayshall/onetwo</url>

  <properties>
	<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
	<java.version>1.8</java.version>
	<!-- <spring-boot.version>1.4.0.RELEASE</spring-boot.version> -->
  </properties> 
  
  <licenses>
    <license>
        <name>The Apache Software License, Version 2.0</name>
        <url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
    </license>
  </licenses>
  
  <developers>
    <developer>
        <name>zeng weishao</name>
        <email>weishao.zeng@gmail.com</email>
    </developer>
  </developers>

  <scm>
      <url>https://github.com/wayshall/onetwo</url>
      <connection>scm:git:ssh://git@github.com/wayshall/onetwo.git</connection>
      <developerConnection>scm:git:ssh://git@github.com/wayshall/onetwo.git</developerConnection>
      <tag>HEAD</tag>
  </scm>
  
  <dependencies>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.assertj</groupId>
      <artifactId>assertj-core</artifactId>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.mockito</groupId>
      <artifactId>mockito-all</artifactId>
      <scope>test</scope>
    </dependency>
  </dependencies>
	
	<dependencyManagement>
	  <dependencies>
		<dependency>
	         <groupId>org.onetwo4j</groupId>
	         <artifactId>onetwo-bom</artifactId>
	         <version>4.3.5-SNAPSHOT</version>
	         <type>pom</type>
	         <scope>import</scope>
	     </dependency>
	  </dependencies>
	</dependencyManagement>


	<build>
	   <pluginManagement>
	       <plugins>
		        <plugin>
		            <groupId>org.apache.maven.plugins</groupId>
		            <artifactId>maven-source-plugin</artifactId>
		            <version>3.0.1</version>
		        </plugin>
	       </plugins>
	   </pluginManagement>
	  <plugins>
		<plugin>
			<groupId>org.apache.maven.plugins</groupId>
			<artifactId>maven-compiler-plugin</artifactId>
            <version>3.5.1</version>
			<configuration>
				<source>${java.version}</source>
				<target>${java.version}</target>
				<compilerVersion>${java.version}</compilerVersion>
				<showWarnings>true</showWarnings>
				<encoding>utf-8</encoding>
				<compilerArgs>
					<arg>-parameters</arg>
				</compilerArgs>
			</configuration>
		</plugin>
	  </plugins>
	</build>
  
</project>