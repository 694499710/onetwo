<?xml version="1.0" encoding="UTF-8"?>
<beans:beans xmlns="http://www.springframework.org/schema/security"
             xmlns:beans="http://www.springframework.org/schema/beans"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xmlns:p="http://www.springframework.org/schema/p"
             xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
                                 http://www.springframework.org/schema/security http://www.springframework.org/schema/security/spring-security-3.2.xsd">


    <http pattern="/css/**" security="none"/>
    <http pattern="/js/**" security="none"/>
    <http pattern="/images/**" security="none"/>
    <http pattern="/**/favicon.ico" security="none"/>
    
    <http use-expressions="true" entry-point-ref="casEntryPoint">
        <headers>
            <frame-options policy="SAMEORIGIN"/>
        </headers>
        
        <intercept-url pattern="/login*" access="permitAll"/>
        <intercept-url pattern="/**" access="authenticated"/>
        
        <custom-filter position="CAS_FILTER" ref="casFilter" />
        
        <form-login login-page="/login" 
                    password-parameter="password"
                    username-parameter="username"
                    login-processing-url="/dologin"
                    authentication-failure-handler-ref="ajaxAuthenticationHandler"
                    authentication-success-handler-ref="ajaxAuthenticationHandler"/>
                    
        <logout logout-url="/logout" logout-success-url="/login" delete-cookies="JSESSIONID" invalidate-session="true"/>
        <session-management >
            <concurrency-control max-sessions="1" error-if-maximum-exceeded="true"/>
        </session-management>
    </http>
    
    <authentication-manager alias="authenticationManager">
        <authentication-provider ref="casAuthenticationProvider">
        </authentication-provider>
    </authentication-manager>
    
    <beans:bean id="ajaxAuthenticationHandler" class="org.onetwo.boot.plugins.security.AjaxAuthenticationHandler">
        <beans:property name="authenticationFailureUrl" value="/login"/>
        <beans:property name="defaultTargetUrl" value="/plugins/permission/admin"/>
    </beans:bean>
    
    <beans:bean id="rbacSecurityXmlContextConfigSupport" class="org.onetwo.boot.plugins.security.support.RbacSecurityXmlContextConfigSupport">
    </beans:bean>
    
    <!-- cas -->
    <beans:bean id="serviceProperties" class="org.springframework.security.cas.ServiceProperties">
	  <beans:property name="service"
	      value="http://localhost:8080/j_spring_cas_security_check"/>
	  <beans:property name="sendRenew" value="false"/>
	</beans:bean>
	
	<beans:bean id="casFilter" class="org.springframework.security.cas.web.CasAuthenticationFilter">
	  <beans:property name="authenticationManager" ref="authenticationManager"/>
	</beans:bean>
	
	<beans:bean id="casEntryPoint"
	      class="org.springframework.security.cas.web.CasAuthenticationEntryPoint">
	  <beans:property name="loginUrl" value="https://emall-sso.yooyo.com:9443/cas-server/login"/>
	  <beans:property name="serviceProperties" ref="serviceProperties"/>
	</beans:bean>
	
	<beans:bean id="casAuthenticationProvider"
      class="org.springframework.security.cas.authentication.CasAuthenticationProvider">
	  <beans:property name="authenticationUserDetailsService">
	    <beans:bean class="org.springframework.security.core.userdetails.UserDetailsByNameServiceWrapper">
	      <beans:constructor-arg ref="zytUserDetailServiceImpl" />
	    </beans:bean>
	  </beans:property>
	  <beans:property name="serviceProperties" ref="serviceProperties" />
	  <beans:property name="ticketValidator">
	    <beans:bean class="org.jasig.cas.client.validation.Cas20ServiceTicketValidator">
	      <beans:constructor-arg index="0" value="https://emall-sso.yooyo.com:9443/cas-server" />
	    </beans:bean>
	  </beans:property>
	  <beans:property name="key" value="zhiyetong"/>
	</beans:bean>
    
</beans:beans>