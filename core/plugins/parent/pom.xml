<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>org.onetwo</groupId>
    <artifactId>onetwo-parent</artifactId>
    <version>1.5.0-SNAPSHOT</version>
  </parent>

  <groupId>org.onetwo.plugins</groupId>
  <artifactId>onetwo-plugin-parent</artifactId>
  <version>2.0-SNAPSHOT</version>
  <packaging>pom</packaging>

  <name>onetwo-plugin-parent</name>
  <url>http://maven.apache.org</url>

  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
	<onetwo.jfish.version>2.0-SNAPSHOT</onetwo.jfish.version>
	<onetwo.plugin.version>2.0-SNAPSHOT</onetwo.plugin.version>
  </properties>
  
  
	<profiles>
	  
	  <profile>
    	<id>plugins</id>
    	<modules>
				<module>../fmtag</module>
				<module>../rest</module>
				<module>../doc</module>
				<module>../fmtagext</module>
				<module>../codegen</module>
				<module>../permission</module>
				<module>../hibernate</module>
				<module>../dq</module>
				<module>../email</module>
				<module>../batch</module>
				<module>../jasper</module>
				<module>../security</module>
				<module>../admin</module>
	  	</modules>
	  </profile>
	</profiles>

  <dependencies>
	
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <scope>test</scope>
    </dependency>
  </dependencies>
  
  <build>
  	<plugins>
  		
		<plugin>
			<groupId>org.apache.maven.plugins</groupId>
			<artifactId>maven-compiler-plugin</artifactId>
			<configuration>
				<source>1.6</source>
				<target>1.6</target>
				<compilerVersion>1.6</compilerVersion>
				<showWarnings>true</showWarnings>
				<encoding>utf-8</encoding>
			</configuration>
		</plugin>
  	</plugins>
  </build>
  
</project>
